        <label>Car Model</label>
        <input type="text" name = "title" value = "<%= trade.title%>" class="form-control" placeholder="Model of your car" required>
    </div>
    <div class="form-group">
        <label>Body type</label>
        <input type="text" name = "Btype" value = "<%= trade.Btype%>" class="form-control" placeholder="Car body type" required>
    </div>

    <div class="form-group">
        <label>Car class</label>
        <input type="text" name = "class" value = "<%= trade.class%>" class="form-control" placeholder="Car class" required>
    </div>


    <div class="form-group">
        <label>Car Image URL</label>
        <input type="text" name = "image" value = "<%= trade.image%>" class="form-control" placeholder="Car image" required>
    </div>
